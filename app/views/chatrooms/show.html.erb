<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behavior='messages'>
  <% @chatroom_messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= form_for [@chatroom, Message.new], remote: true, format: :js, authenticity_token: true do |f| %>
  <%= f.text_area :content, rows: 2, class: 'form-control', autofocus: true %>
<% end %>
